<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="#EEEEEE"
    app:cardElevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_baseline_logout_24"/>


        <TextView
            android:layout_below="@+id/image"
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black_25303c"
            android:fontFamily="@font/sf_pro_display_semibold"
            tools:text="ayush srivastava"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/region"
            android:layout_toRightOf="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            tools:text="Event"
            android:textColor="@color/red_ff577f"
            android:fontFamily="@font/sf_pro_display_semibold_italic"
            android:paddingLeft="6dp"
            android:paddingTop="22dp"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/subregion"
            android:layout_below="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Swaminathan"
            android:textColor="#2196F3"
            android:fontFamily="@font/sf_pro_display_regular"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            tools:ignore="RtlSymmetry" />



        <TextView
            android:id="@+id/borders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subregion"
            android:textColor="@color/black_25303c"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textStyle="bold"
            tools:text="ayush srivastava"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/borders"
            android:textStyle="bold"
            android:textColor="@color/black_25303c"
            android:fontFamily="@font/sf_pro_display_regular"
            tools:text="ayush srivastava"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/population"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/image"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1 Hour Ago"
            android:textColor="@color/black"
            android:paddingTop="16dp"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />




    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>